<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.PasswordField?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="300.0" hgap="10.0" vgap="10.0">
	<padding>
		<Insets topRightBottomLeft="10.0"/>
	</padding>
	<children>
		<HBox  GridPane.rowIndex = "0" GridPane.columnIndex = "0"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" alignment="CENTER">
			<children>
				<Label text="회원가입"/>
			</children>	
		</HBox>
		<Label text="아이디" GridPane.rowIndex = "2" GridPane.columnIndex = "0"/>
		<TextField  GridPane.rowIndex = "2" GridPane.columnIndex = "1" 
					GridPane.hgrow = "ALWAYS" fx:id="txtID" promptText ="ID를 입력하세요"/>
		<Label text="비밀번호" GridPane.rowIndex = "3" GridPane.columnIndex = "0"/>
		<PasswordField GridPane.rowIndex = "3" GridPane.columnIndex = "1" 
					GridPane.hgrow = "ALWAYS" fx:id="txtPassword" promptText="비밀번호를 입력하세요"/> 
		<Label text="비밀번호 확인" GridPane.rowIndex = "4" GridPane.columnIndex = "0"/>
		<PasswordField GridPane.rowIndex = "4" GridPane.columnIndex = "1" 
					GridPane.hgrow = "ALWAYS" fx:id="txtPasswordChk" promptText="비밀번호를 다시 입력하세요"/>
		<HBox  GridPane.rowIndex = "6" GridPane.columnIndex = "0" spacing="10"
			GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" alignment="CENTER">
			<children>
				<Button text="회원가입" fx:id="btnSignIn"/>
			</children>
		</HBox>
	</children>
</GridPane>

