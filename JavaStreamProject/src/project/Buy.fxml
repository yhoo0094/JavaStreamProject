<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox prefHeight="50" alignment="CENTER" spacing="20">
			<children>
				<Label text="검색" />
				<TextField prefWidth="150" id="buySearch"/>
				<Button text="검색" id="btnSearch"/>	
			</children>
		</HBox>
	</top>
	<center>
		<TableView fx:id="buyTableView" prefHeight="200" >
			<columns>
				<TableColumn prefWidth="100" resizable="false" text="물건명" />
				<TableColumn prefWidth="100" resizable="false" text="상태" />
				<TableColumn prefWidth="100" resizable="false" text="가격" />
			</columns>
		</TableView>
		
	</center>
	<bottom>
		<HBox prefHeight="50" alignment="CENTER" spacing="20">
			<children>
				<Button fx:id="btnBuyList" text="구매내역" />
				<Button fx:id="btnBuyEnd" text="구매하기" />
			</children>
		</HBox>
	</bottom>
</BorderPane>

